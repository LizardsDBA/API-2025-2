<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.fatec.api.controller.orientador.ParecerOrientadorController" 
      spacing="0">
   
   <!-- Header -->
   <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header">
      <padding>
         <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
      </padding>
      <Label styleClass="logo" text="API/TG" />
      <Region HBox.hgrow="ALWAYS" />
      <Button onAction="#goHome" text="Home" />
      <Button onAction="#logout" text="Sair" />
   </HBox>
   
   <!-- Main Layout with Sidebar -->
   <HBox VBox.vgrow="ALWAYS" spacing="16.0">
      <padding>
         <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
      </padding>
      
      <!-- Sidebar -->
      <VBox prefWidth="240.0" spacing="8.0" styleClass="sidebar">
         <Label styleClass="sidebar-title" text="Orientador" />
         <Label styleClass="sidebar-group" text="TRABALHO" />
         <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goVisaoGeral" 
                 styleClass="sidebar-link" text="Visão Geral" />
         <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goPainel" 
                 styleClass="sidebar-link" text="Painel de Pendências" />
         <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goChat" 
                 styleClass="sidebar-link" text="Chat com Alunos" />
         <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goNotificacoes" 
                 styleClass="sidebar-link" text="Notificações" />
         <Button alignment="BASELINE_LEFT" maxWidth="1.7976931348623157E308" onAction="#goImportar" 
                 styleClass="sidebar-link" text="Importar Formulários" />
      </VBox>
      
      <!-- Main Content -->
      <VBox HBox.hgrow="ALWAYS" spacing="16.0" styleClass="card">
         
         <!-- Breadcrumbs -->
         <Label styleClass="subtle" text="Orientador / Revisão" />
         
         <!-- Page Title -->
         <VBox spacing="6.0">
            <Label styleClass="title" text="Revisão / Parecer" />
            <Label styleClass="subtitle" text="Leitura do texto do aluno + registro de parecer (decorativo)." />
         </VBox>
         
         <!-- Content Grid -->
         <GridPane hgap="12.0" vgap="12.0">
            <columnConstraints>
               <ColumnConstraints hgrow="ALWAYS" percentWidth="66" />
               <ColumnConstraints hgrow="SOMETIMES" percentWidth="34" />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>
            
            <!-- Left Column - Document Reading Area -->
            <VBox GridPane.columnIndex="0" spacing="8.0" styleClass="card">
               <Label styleClass="subtitle" text="Documento do Aluno" />
               <TextArea editable="false" prefHeight="260.0" 
                        text="# Introdução&#10;&#10;Este trabalho apresenta um estudo sobre...&#10;&#10;## Metodologia&#10;&#10;A metodologia utilizada consiste em...&#10;&#10;## Resultados&#10;&#10;Os resultados obtidos demonstram que...&#10;&#10;## Conclusão&#10;&#10;Conclui-se que os objetivos foram alcançados..." 
                        wrapText="true" />
            </VBox>
            
            <!-- Right Column - Parecer Area -->
            <VBox GridPane.columnIndex="1" spacing="8.0" styleClass="card">
               <Label styleClass="subtitle" text="Parecer" />
               <TextArea prefHeight="160.0" promptText="Escrever parecer..." wrapText="true" />
               
               <!-- Action Buttons -->
               <HBox alignment="CENTER_RIGHT" spacing="8.0">
                  <Button onAction="#goPainel" styleClass="btn-primary" text="Salvar" />
                  <Button onAction="#goChat" text="Ir ao Chat" />
               </HBox>
            </VBox>
         </GridPane>
      </VBox>
   </HBox>
   
   <!-- Footer -->
   <HBox alignment="CENTER" spacing="12.0" styleClass="footer">
      <padding>
         <Insets bottom="12.0" left="16.0" right="12.0" top="12.0" />
      </padding>
      <Label styleClass="subtle" text="Wireframe API 2025-2" />
      <Region HBox.hgrow="ALWAYS" />
      <Label styleClass="subtle" text="Grupo LizzardsDBA" />
   </HBox>
</VBox>
