<BorderPane fx:controller="com.example.OrientadorPainelPendenciasController" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21.0.1">
    <top>
<HBox alignment="CENTER_LEFT" spacing="10" styleClass="header">
            <ImageView fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true" styleClass="logo"/>
            <Label text="API/TG" styleClass="app-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Home" styleClass="header-button"/>
            <Button text="Sair" styleClass="header-button"/>
        </HBox>
    </top>
    <left>
<VBox spacing="10" styleClass="sidebar">
            <Label text="Perfil do Orientador" styleClass="sidebar-title"/>
            <Button text="Meus Alunos" styleClass="sidebar-button"/>
            <Button text="Minhas Orientações" styleClass="sidebar-button"/>
            <Button text="Configurações" styleClass="sidebar-button"/>
        </VBox>
    </left>
    <center>
<VBox spacing="10" styleClass="main-content">
            <Label text="Painel do Orientador" styleClass="content-title"/>
            <HBox spacing="5" styleClass="breadcrumbs">
                <Label text="Home" styleClass="breadcrumb-item"/>
                <Label text=">" styleClass="breadcrumb-separator"/>
                <Label text="Orientador" styleClass="breadcrumb-item"/>
                <Label text=">" styleClass="breadcrumb-separator"/>
                <Label text="Pendências" styleClass="breadcrumb-item-active"/>
            </HBox>
            <Label text="Tabela de Pendências" styleClass="section-title"/>
            <TableView styleClass="pendencias-table">
                <columns>
                    <TableColumn text="Aluno" styleClass="table-column"/>
                    <TableColumn text="Versão" styleClass="table-column"/>
                    <TableColumn text="Pedido" styleClass="table-column"/>
                    <TableColumn text="Prioridade" styleClass="table-column"/>
                    <TableColumn text="Ações" styleClass="table-column"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
<HBox alignment="CENTER" styleClass="footer">
            <Label text="© 2025 API/TG. Todos os direitos reservados." styleClass="footer-text"/>
        </HBox>
    </bottom>
</BorderPane>
