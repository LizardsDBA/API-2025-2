<BorderPane fx:controller="CoordenadorMapaController" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21.0.1">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <top>
<HBox alignment="CENTER_LEFT" spacing="10" styleClass="header">
            <ImageView fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true" styleClass="logo">
                <!-- Placeholder for API/TG Logo -->
            </ImageView>
            <Label text="API/TG" styleClass="app-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Home" styleClass="header-button"/>
            <Button text="Sair" styleClass="header-button"/>
        </HBox>
    </top>
    <left>
<VBox spacing="10" styleClass="sidebar">
            <Label text="Perfil" styleClass="sidebar-title"/>
            <Button text="Meus Dados" styleClass="sidebar-button"/>
            <Button text="Minhas Orientações" styleClass="sidebar-button"/>
            <Button text="Configurações" styleClass="sidebar-button"/>
        </VBox>
    </left>
    <center>
<VBox spacing="10" styleClass="main-content">
            <Label text="Coordenador Mapa" styleClass="content-title"/>
            <Label text="Home > Coordenador > Mapa de Orientações" styleClass="breadcrumbs"/>
            <TableView styleClass="orientations-table">
                <columns>
                    <TableColumn text="Professor"/>
                    <TableColumn text="Aluno"/>
                    <TableColumn text="Tema"/>
                    <TableColumn text="Status"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
<HBox alignment="CENTER" styleClass="footer">
            <Label text="© 2025 API/TG. Todos os direitos reservados." styleClass="footer-text"/>
        </HBox>
    </bottom>
</BorderPane>
